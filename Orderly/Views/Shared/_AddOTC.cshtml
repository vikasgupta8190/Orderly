                    @Html.LabelFor(x => x.TokenQty, new { @class = "form-label" })
                    @if (view)
                    {
                        @Html.TextBoxFor(x => x.TokenQty, new { @class = "form-control", type = "number", min = "1", @readonly = "readonly" })
