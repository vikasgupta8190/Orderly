</form>
<script type="text/javascript">
    $(document).ready(function () {
        $('#new-otc').submit(function (e) {
            e.preventDefault();
            var url = $('#new-otc').attr('action');
            ajaxRequests.POST(
                url,
                $('#new-otc').serialize(),
                (response) => {
                    if (response.success) {
                        refresh_OTC_list();
                        $('#new-otc').trigger("reset");
                    }
                    orderlyNotification.getNotificaitonHtml();
                },
                (error) => {
                }
            )
        });
    });

    $('#@Html.IdFor(x=>x.TokenQty), #@Html.IdFor(x=>x.PricePerToken)').on('change', function () {
        getTotalAmount();
    })
    $('#@Html.IdFor(x=>x.TokenQty), #@Html.IdFor(x=>x.PricePerToken)').keyup(function () {
        getTotalAmount();
    })

    function getTotalAmount() {        
        var quantity = $('#@Html.IdFor(x=>x.TokenQty)').val();
        var price = $('#@Html.IdFor(x=>x.PricePerToken)').val();
        if (quantity > 0.0
            && price > 0.0)
        {
            $('#@Html.IdFor(x=>x.TotalAmount)').val((price * quantity).toFixed(2));
        }
    }
</script>