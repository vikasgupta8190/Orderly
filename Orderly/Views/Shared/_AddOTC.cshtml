                    @Html.LabelFor(x => x.TotalAmount, new { @class = "form-label" })
                    @if (view)
                    {
                        @Html.TextBoxFor(x => x.TotalAmount, new { @class = "form-control", type = "number", step = ".01", @readonly = "readonly" })
                    }
                    else
                    {
                        @Html.TextBoxFor(x => x.TotalAmount, new { @class = "form-control", type = "number", step = ".01" })
                    }
                </div>
                    @Html.ValidationMessageFor(m => m.TotalAmount, "", new { @class = "text-danger validation" })

