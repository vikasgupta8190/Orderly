                </div>
                <div class="modal-body">
                    <div class="cus_field">
                        @Html.LabelFor(x => x.Type, new { @class = "form-label" })
                        @if (view)
                        {
                            @Html.DropDownListFor(x => x.Type, Model.TypeList, new { @class = "form-select", @readonly = "readonly" })
                        }
                        else
                        {
                            @Html.DropDownListFor(x => x.Type, Model.TypeList, new { @class = "form-select" })
                        }

                    </div>
                    @Html.ValidationMessageFor(m => m.Type, "", new { @class = "text-danger validation" })

                <div class="cus_field">
                    @Html.LabelFor(x => x.TokenId, new { @class = "form-label" })
                    @if (view)
                    {
                        @Html.DropDownListFor(x => x.TokenId, Model.TokenList, "Select Token", new { @class = "form-select", @readonly = "readonly" })
                    }
                    else
                    {
                        @Html.DropDownListFor(x => x.TokenId, Model.TokenList, "Select Token", new { @class = "form-select" })
