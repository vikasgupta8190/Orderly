                    @Html.LabelFor(x => x.Currency, new { @class = "form-label" })
                    @if (view)
                    {
                        @Html.TextBoxFor(x => x.Currency, new { @class = "form-control", @readonly = "readonly" })
                    }
                    else
                    {
                        @Html.TextBoxFor(x => x.Currency, new { @class = "form-control"})
