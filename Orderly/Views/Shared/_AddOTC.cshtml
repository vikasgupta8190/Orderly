                        @Html.TextBoxFor(x => x.PricePerToken, new { @class = "form-control", type = "number", step = ".01" })
                    }
                </div>
                    @Html.ValidationMessageFor(m => m.PricePerToken, "", new { @class = "text-danger validation" })

