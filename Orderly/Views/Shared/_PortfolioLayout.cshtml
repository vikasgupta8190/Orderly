<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Orderly</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="~/css/custom.css" />
    <link rel="stylesheet" href="~/css/responsive.css" />
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery-3.6.0.js"></script>
    <script src="~/js/comman.js"></script>
</head>
<body>
    <div id="ajaxLoader" style="display:none" class="h-100 row align-items-center">
        <div class="col d-flex justify-content-center">
            <div class="spinner-border fast text-danger" role="status">
                <span class="sr-only"></span>
            </div>
        </div>
    </div>
    <div>
        <div class="center_panel">
            @await Html.PartialAsync("_Notifications")
            @RenderBody()
        </div>
    </div>
    <script type="text/javascript">
        function pageReload(value) {
            var seconds = value * 1000;
            setTimeout(function () { window.location.reload(); }, seconds);
        }
    </script>
</body>
</html>
<style>
    div#ajaxLoader {
        position: fixed;
        z-index: 99999999;
        background: #00000073;
        width: 100%;
    }
</style>